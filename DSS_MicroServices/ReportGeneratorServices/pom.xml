		<dependency>
    		<groupId>core-renderer</groupId>
    		<artifactId>core-renderer</artifactId>
    		<version>1.0</version>
    		<scope>system</scope>
    		<systemPath>${project.basedir}/src/main/webapp/WEB-INF/lib/core-renderer.jar</systemPath>
		</dependency>
		
		<dependency>
    		<groupId>jaxen</groupId>
    		<artifactId>jaxen</artifactId>
